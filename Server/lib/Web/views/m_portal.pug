extends m_layout

block Subject
	title= L('title')

block CSS
	link(rel='stylesheet', href='https://cdn.jsdelivr.net/gh/lshqqytiger/BFKKuTuDelivr@latest/css/in_game_kkutu.css')

block JS
	script(type='text/javascript', src='https://cdn.jsdelivr.net/gh/lshqqytiger/BFKKuTuDelivr@latest/js/in_portal.min.js')

block Middle
	+separator(5)
	div(style='margin-left: calc(50% - 170px);')
		div(style='float: left; padding-left: 70px;')
			h3#holder= L('title')
			img#logo(src='https://cdn.jsdelivr.net/gh/lshqqytiger/BFKKuTuDelivr@latest/img/kkutu/short_logo.png')
		div.jjoriping(style='margin-top: 10px;')
			img.jjoObj.jjoEyeL(src='https://cdn.jsdelivr.net/gh/lshqqytiger/BFKKuTuDelivr@latest/img/jjoeyeL.png', style='top: 40px; left: -270px;')
			img.jjoObj.jjoNose(src='https://cdn.jsdelivr.net/gh/lshqqytiger/BFKKuTuDelivr@latest/img/jjonose.png', style='top: 42px; left: -170px;')
			img.jjoObj.jjoEyeR(src='https://cdn.jsdelivr.net/gh/lshqqytiger/BFKKuTuDelivr@latest/img/jjoeyeR.png', style='top: 40px; left: -70px;')
			div.jjoDisplayBar(style='float: left; margin-top: -30px; width: 325px; height: 85px;')
				button#game-start.jjo-display= L('gameStart')
	div#menu-bar(style='float: left; margin: 10px 0px 10px calc(50% - 136px); width: 100%;')
		a(target='_blank', href='//cafe.bfkkutu.ze.am/', style='background-color: #189E47;')= 'Naver Cafe'
		a(target='_blank', href='//discord.gg/scPVHcE', style='background-color: #233599;')= 'Discord'
	div(style='float: left; margin-left: calc(50% - 160px);')
		div.server-list-box
			h3.server-list-title
				a#server-refresh
					+FA('refresh')
					+Expl(L('serverRefresh'))
				label= L('serverList')
				label#server-total(style='color: #AAA; font-size: 13px;')
			div#server-list
	noscript
		h1 You can't play BFKKuTu without JavaScript.
	div(style='float: left; width: calc(100% - 4px); border: 1px solid #CCC; margin-top: 10px; background-color: #EEE;')
		iframe#error(width='100%', height='40px', scrolling='no', src='/server_status.html')
	div(style='float: left; width: calc(100% - 4px); border: 1px solid #CCC; margin-top: 10px; background-color: #EEE;')
		iframe#kkutu-bulletin(width='100%', height='400px', src='/kkutu_bulletin.html')
	div(style='float: left; width: calc(37.5% - 4px); border: 0px solid #CCC; margin-top: 10px; background-color: #7289da;')
		iframe#discord-widget(width='100%', height='80px', src='/discord_widget.html')
	+separator(10)

block Bottom
	div