extends layout

block Subject
	title= L('title')

block CSS
	link(rel='stylesheet', href='/css/in_game_kkutu.css')

block Top
	div#portal-notice(onclick="$('#portal-notice').hide()")
		div#pn-content
			include ../public/notice/portal.html
		+Expl('클릭하여 닫기')
		//- L('PORTAL_NOTICE')

block Middle
	div#Header
		div(style='display: flex;')
			img#logo(src='https://cdn.jsdelivr.net/npm/bfkkutudelivr@'+L('cdn_version')+'/img/kkutu/short_logo.png', style='display: inline-flex;')
			div#start-button(style='margin-left: auto; border-radius: 10px; width: 325px; height: 85px; display: inline-flex; flex: none; justify-content: center; align-items: center;')
				button#game-start= L('gameStart')
		div(style='display: flex; width: 100%;')
			div(style='display: flex; width: 100%; height: 0px;')
				a.p_button(target='_blank', href='http://daldal.so/', style='display: inline-flex; background: url(https://cdn.jsdelivr.net/npm/bfkkutudelivr@latest/img/auth/daldalso.png);')= '달달소'
				a.p_button(target='_blank', href='http://cafe.bfkkutu.ze.am/', style='display: inline-flex; background-color: #189E47;')= '네이버 카페'
				a.p_button(target='_blank', href='http://discord.gg/scPVHcE', style='display: inline-flex; background-color: #233599;')= '디스코드'
			div(style='display: flex; border-radius: 10px;')
				div.server-list-box(style='display: inline-flex; flex: none; border-radius: 10px; width: 400px;')
					h3.server-list-title(style='display: inline-flex; border-radius: 10px; width: 90px; flex-direction: column;')
						div#server-list-refresh-container(style='display: flex; justify-content: flex-end; margin-right: 5px;')
							a#server-refresh(style='display: inline-flex;')
								+FA('refresh')
								+Expl(L('serverRefresh'))
							label(style='display: inline-flex;')= L('serverList')
						label#server-total(style='display: flex; color: #AAA; font-size: 13px; justify-content: flex-end; margin-right: 5px;')
					div#server-list(style='width: 310px;')
		div.iframe-container
			iframe#kkutu-bulletin(width='100%', height='400px', src='/kkutu_bulletin.html')
	noscript
		h1 You can't play BFKKuTu without JavaScript.
					
block Bottom
	div