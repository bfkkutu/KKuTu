extends layout

block Subject
	title= L('title')

block CSS
	link(rel='stylesheet', href='/css/in_game_kkutu.css')

block Top
	div#portal-notice(onclick="$('#portal-notice').hide()")
		div#pn-content
			include ../public/notice/portal.html
		+Expl('클릭하여 닫기')
		//- L('PORTAL_NOTICE')

block Middle
	div#Header
		div(style='display: flex;')
			img#logo(src='https://cdn.jsdelivr.net/npm/bfkkutudelivr@'+L('cdn_version')+'/img/kkutu/short_logo.png', style='display: inline-flex;')
			div#start-button(style='margin-left: auto; border-radius: 10px; width: 325px; height: 85px; display: inline-flex; flex: none; justify-content: center; align-items: center;')
				button#game-start= L('gameStart')
		div(style='display: flex; width: 100%;')
			div(style='display: flex; width: 100%; height: 0px;')
				a.p_button.daldalso(target='_blank', href='http://daldal.so/')= '달달소'
				a.p_button.cafe(target='_blank', href='http://cafe.bfkkutu.ze.am/')= '네이버 카페'
				a.p_button.discord(target='_blank', href='http://discord.gg/scPVHcE')= '디스코드'
			div(style='display: flex; border-radius: 10px;')
				div.server-list-box
					h3.server-list-title
						div#server-list-refresh-container
							a#server-refresh
								+FA('refresh')
								+Expl(L('serverRefresh'))
							label.inline-flex= L('serverList')
						label#server-total
					div#server-list
		div.iframe-container
			iframe#kkutu-bulletin(src='/kkutu_bulletin.html')
	noscript
		h1 You can't play BFKKuTu without JavaScript.
					
block Bottom
	+GoogleAdvertisement("portal")