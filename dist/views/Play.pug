    button#menu-invite.for-master(style='display: none; background-color: #9FE669;')!= L('menu-invite')
    button#menu-practice.for-master.for-normal(style='display: none; background-color: #FCF5A9;')!= L('menu-practice')
    button#menu-ready.for-normal(style='display: none; background-color: #FFC67F;')!= L('menu-ready')
    button#menu-start.for-master(style='display: none; background-color: #FFB576;')!= L('menu-start')
    button#menu-exit.for-master.for-normal.for-gaming(style='display: none; background-color: #FFADAD;')!= L('menu-exit')
    button#menu-replay.for-lobby(style='display: none; background-color: #D9FF82;')!= L('menu-replay')
    button#menu-leaderboard.for-lobby(style='display: none; background-color: #FFADD3;')!= L('menu-leaderboard')
