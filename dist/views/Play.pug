    button#menu-community.tiny-menu.for-lobby.for-master.for-normal.for-gaming(style='display: none; background-color: #DAA9FF;')!= L('menu-community')
    button#menu-spectate.for-master.for-normal(style='display: none; background-color: #D19DFF;')!= L('menu-spectate')
    button#menu-room-set.for-master(style='display: none; background-color: #B0D2F3;')!= L('menu-room-set')
    button#menu-room-new.for-lobby(style='display: none; background-color: #8EC0F3;')!= L('menu-room-new')
    button#menu-room-quick.for-lobby(style='display: none; background-color: #B0D2F3;')!= L('menu-room-quick')
    button#menu-shop.for-lobby(style='display: none; background-color: #B3E7B7;')!= L('menu-shop')
