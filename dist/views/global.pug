include components/Icon
include components/Separator
include components/Tooltip
include utils/L

html
  head
    title= L('title')
    meta(charset='utf-8')
    link(rel='stylesheet', href='/media/fa.css')
    link(rel='stylesheet', href=`/scripts/${locals.page}.css`)
    script(type='text/javascript', src='/media/jquery.js')
    script(type='text/javascript', src=`/scripts/${locals.page}.js`)
    script(type='text/javascript')!= `window.FRONT=true;window.CONSTANTS=${JSON.stringify(locals.constants)};window.L=${JSON.stringify(locals.L)};`
  body
    div#top
      div#global-notice
        div.body
          include ../media/global-notice.html
        +Tooltip(L('GLOBAL_NOTICE'))
      block Top
    div#jungle
      img#background
      block Jungle
    div#middle
      block Middle
    div#bottom
      block Bottom
      div.bottom-legal
        if locals.onPC
          a(href='?')= L('AS_MOBILE')
        br
        a.bottom-contact(href='http://blog.jjo.kr/', target='_blank')= L('CREATOR')
        a.bottom-contact(href='mailto:op@jjo.kr', target='_blank') Contact op@jjo.kr
      div.bottom-legal!= L('LICENSE', locals.copyright.year, locals.copyright.publisher, locals.copyright.address, locals.copyright.repository)
      +Separator(10)
