include ../Dialog
include ../GameOption

+Dialog('dialog-quick', 300, 230, L('dialog-quick-title'))
  div.dialog-bar
    h4= L('game-mode')
    select#quick-mode
      - for(const v of locals.rules)
        option(value=v)= L(`mode-${v}`)
  div.dialog-bar(style='height: 59px;')
    h4(style='height: 45px;')= L('misc')
    - for(const v of locals.ruleOptions)
      - if(v === "ijp") continue;
      +GameOption(v, 'quick')
  div.dialog-bar
    h4(style='width: 100%; height: 20px;')#quick-status
  div.dialog-bar
    h4(style='width: 100%; height: 20px;')#quick-queue
  div.dialog-bar.tail-button
    button#quick-ok= L('OK')
