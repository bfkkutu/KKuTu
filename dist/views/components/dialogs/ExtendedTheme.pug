include ../Dialog

+Dialog('dialog-extended-theme', 200, 400, L('dialog-extended-theme-title'))
  h4= L('x-pick-extensions')
  div.dialog-bar
    button#pick-all= L('pick-all')
    button#pick-none= L('pick-none')
  div.dialog-bar#extension-list(style='height: 280px; overflow-y: scroll;')
    div.dialog-option#ko-pick-list(style='width: 100%;')
      - locals.availableThemes['ko'].forEach(function(item){
        - let name = "ko-pick-" + item;
        div(style='float: left; width: 100%;')
          input(id=name, type='checkbox', style='width: auto;')
          label(for=name)= L('theme-' + item)
      - });
    div.dialog-option#en-pick-list(style='width: 100%;')
      - locals.availableThemes['en'].forEach(function(item){
        - let name = "en-pick-" + item;
        div(style='float: left; width: 100%;')
          input(id=name, type='checkbox', style='width: auto;')
          label(for=name)= L('theme-' + item)
      - });
  div.dialog-bar.tail-button
    button#injpick-ok= L('OK')
