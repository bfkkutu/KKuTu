{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "administrators": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "계정의 식별자."
          },
          "password": {
            "type": "string",
            "description": "관리자 명령을 수행하기 위해 쓸 암호."
          }
        },
        "required": [
          "id",
          "password"
        ],
        "additionalProperties": false
      },
      "description": "관리자 권한을 가질 수 있는 계정 목록."
    },
    "application": {
      "type": "object",
      "properties": {
        "server-capacity": {
          "type": "number",
          "description": "한 서버에 접속할 수 있는 최대 인원."
        }
      },
      "required": [
        "server-capacity"
      ],
      "additionalProperties": false,
      "description": "끄투 게임 자체에 관한 설정 객체."
    },
    "cluster": {
      "type": "object",
      "properties": {
        "game-slave": {
          "type": "number",
          "description": "한 게임 서버당 갖는 슬레이브(게임 방 서버)의 수."
        },
        "web": {
          "type": "number",
          "description": "웹 서버의 프로세스 수.\r\n\r\n웹 서버가 멀티프로세싱된 경우 세션 유지를 위해서는\r\nRedis 등 별도 세션 데이터베이스가 마련되어야 한다."
        }
      },
      "required": [
        "game-slave",
        "web"
      ],
      "additionalProperties": false,
      "description": "멀티프로세스 서버 구축에 필요한 정보를 담은 객체.\r\n\r\n멀티프로세싱된 경우 프로세스가 마스터 하나와 슬레이브 하나 이상으로 나뉘며\r\n각 슬레이브는 0부터 시작하는 고유한 번호를 갖는다."
    },
    "copyright": {
      "type": "object",
      "properties": {
        "year": {
          "type": "number",
          "description": "최근 업데이트 연도."
        },
        "publisher": {
          "type": "string",
          "description": "배포하는 사람의 이름."
        },
        "address": {
          "type": "string",
          "description": "배포하는 사람의 연락처(이메일 등)."
        },
        "repository": {
          "type": "string",
          "description": "프로그램의 소스 코드를 확인할 수 있는 페이지 URL(GitHub 등)."
        }
      },
      "required": [
        "year",
        "publisher",
        "address",
        "repository"
      ],
      "additionalProperties": false,
      "description": "저작권 안내문 표시에 필요한 정보를 담은 객체."
    },
    "database": {
      "type": "object",
      "properties": {
        "host": {
          "type": "string",
          "description": "접속할 서버의 주소."
        },
        "port": {
          "type": "number",
          "description": "접속할 서버의 포트 번호."
        },
        "user": {
          "type": "string",
          "description": "사용할 계정 이름."
        },
        "password": {
          "type": "string",
          "description": "계정의 암호."
        },
        "name": {
          "type": "string",
          "description": "사용할 데이터베이스 이름."
        }
      },
      "required": [
        "host",
        "port",
        "user",
        "password",
        "name"
      ],
      "additionalProperties": false,
      "description": "데이터베이스 연결에 필요한 정보를 담은 객체."
    },
    "https": {
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "pfx": {
              "type": "string",
              "description": "PKCS#12 통합 인증서 파일의 위치."
            }
          },
          "required": [
            "pfx"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "cert": {
              "type": "string",
              "description": "SSL 인증서 파일의 위치."
            },
            "key": {
              "type": "string",
              "description": "SSL 개인 키 파일의 위치."
            },
            "ca": {
              "type": "string",
              "description": "SSL 인증 기관 인증서 파일의 위치."
            }
          },
          "required": [
            "cert",
            "key"
          ],
          "additionalProperties": false
        }
      ],
      "description": "HTTPS 통신에 필요한 정보를 담은 객체.\r\n\r\n인증서 파일이 상대 경로로 입력된 경우 `data` 디렉토리 안을 기준으로 탐색한다."
    },
    "locales": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      },
      "description": "지원하는 언어 객체.\r\n\r\n키는 ISO 639 식별자, 값은 해당 언어 이름을 나타낸다."
    },
    "log": {
      "type": "object",
      "properties": {
        "directory": {
          "type": "string",
          "description": "로그 파일이 담길 디렉토리.\r\n\r\n디렉토리가 없는 경우 새로 만든다."
        },
        "directory-k-hot": {
          "type": "string",
          "description": "*끄투에서의 인기 단어* 서비스용 로그 디렉토리.\r\n\r\n`directory` 값 뒤에 합쳐진 결과를 실제 경로로 삼는다."
        },
        "interval": {
          "type": "number",
          "description": "한 로그 파일이 다룰 수 있는 최대 시간(㎳)."
        }
      },
      "required": [
        "directory",
        "directory-k-hot",
        "interval"
      ],
      "additionalProperties": false,
      "description": "로그 기록에 필요한 정보를 담은 객체."
    },
    "ports": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "description": "기본 포트 번호 목록.\r\n\r\n게임 로비 서버의 포트 번호가 곧 기본 포트이며,\r\n게임 방 서버의 포트 번호는 기본 포트에서 416과 슬레이브 번호를 더한 값이다."
    },
    "recaptcha": {
      "type": "object",
      "properties": {
        "to-guest": {
          "type": "boolean",
          "description": "손님 계정에게 표시할지 여부."
        },
        "to-user": {
          "type": "boolean",
          "description": "회원에게 표시할지 여부."
        },
        "site": {
          "type": "string",
          "description": "구글에서 받은 사이트 키 값."
        },
        "secret": {
          "type": "string",
          "description": "구글에서 받은 시크릿 키 값."
        }
      },
      "required": [
        "to-guest",
        "to-user",
        "site",
        "secret"
      ],
      "additionalProperties": false,
      "description": "구글 reCAPTCHA 모듈에 필요한 정보를 담은 객체.\r\n\r\n게임 로비에 접속하기 위해 사용자에게 reCAPTCHA 통과를 요구할 수 있다."
    },
    "title": {
      "type": "string",
      "description": "프리서버 제목."
    }
  },
  "required": [
    "$schema",
    "administrators",
    "application",
    "cluster",
    "copyright",
    "database",
    "locales",
    "log",
    "ports",
    "title"
  ],
  "additionalProperties": false,
  "definitions": {}
}